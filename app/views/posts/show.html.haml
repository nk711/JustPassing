
.row
	.col-md-4
		= image_tag @post.post_image.url(:post_show), class: "post-show"
	
	.col-md-8
		%h2= @post.title
		%p= @post.description
		%p= @post.category.name if @post.category
		%p= link_to @post.user.profile.first_name, @post.user.profile

.row
	.col-md-4
		-#comments

		

- if user_signed_in? && @post.user_id == current_user.id
	%li= link_to t('.edit'), edit_post_path(@post)
	%li= link_to t('.delete'), post_path(@post), method: :delete, data: { confirm: t('.confirmation')}

-# has the user logged in and set up a profile?
-# If so display a contact button
- if user_signed_in?
	-if current_user.profile.persisted? && @post.user_id!=current_user.id
		%li= link_to t('.contact'), posts_path

.container
	= render "contact"



%li= link_to t('.back'), posts_path



